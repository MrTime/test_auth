<h1>Listing pictures</h1>

<dl>
  <dt>Showed times</dt>
  <dd><%= $my_redis['show_count'] %></dd>
  <dt>Updated times</dt>
  <dd><%= $my_redis['updated_count'] %></dd>
  <dt>Created times</dt>
  <dd><%= $my_redis['created_count'] %></dd>
  <dt>Destroyed times</dt>
  <dd><%= $my_redis['destroy_count'] %></dd>
</dl>

<dl>
  <dt>Showed times</dt>
  <dd><%= $redis.get('show_count') %></dd>
</dl>

<table>
  <thead>
    <tr>
      <th>Filename</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.file_file_name %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
