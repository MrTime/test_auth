<h1>Listing cars</h1>

<%= form_tag '/cars.js', id: "search_cars", method: 'get', remote: true do %>
  <%= text_field_tag :title, params[:title], placeholder: 'Title' %>
  <%= text_field_tag :start_year, params[:start_year], placeholder: 'Beggining from' %>
  <%= text_field_tag :end_year, params[:end_year], placeholder: 'Ending to' %>
  <%= submit_tag 'filter' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Price</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="cars">
    <%= render @cars %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path %>
